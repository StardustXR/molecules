    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'stardust-xr-molecules'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=stardust-xr-molecules"
                ],
                "filter": {
                    "name": "stardust-xr-molecules",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example 'grabbable'",
            "cargo": {
                "args": [
                    "build",
                    "--example=grabbable",
                    "--package=stardust-xr-molecules"
                ],
                "filter": {
                    "name": "grabbable",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {"LOG_LEVEL": "debug"}
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in example 'grabbable'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--example=grabbable",
                    "--package=stardust-xr-molecules"
                ],
                "filter": {
                    "name": "grabbable",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}